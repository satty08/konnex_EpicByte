<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingVertical="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_box"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/app_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Name :"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/app_name_title"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@id/app_name_title" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bug_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name_title"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="Bug Title:"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bug_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/bug_tittle"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@id/bug_tittle"
        android:layout_below="@id/app_name"
        android:layout_marginTop="3dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bug_des_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bug_tittle"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="Bug Description:"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bug_des_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/bug_des_title"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@id/bug_des_title"
        android:layout_below="@id/bug_title_text"
        android:layout_marginTop="3dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/model_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bug_des_title"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="Model Name:"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/model_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/model_name_title"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@id/model_name_title"
        android:layout_below="@id/bug_des_text"
        android:layout_marginTop="3dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/screen_size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/model_name_title"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="Screen Size:"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/screen_size_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/screen_size_title"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@id/screen_size_title"
        android:layout_below="@id/model_name_text"
        android:layout_marginTop="3dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_size_title"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="Status:"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/status_title"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@id/status_title"
        android:layout_below="@id/screen_size_text"
        android:layout_marginTop="3dp"/>
</RelativeLayout>